RewriteEngine On

# Language Detection and Redirection
# Detect browser language preference
RewriteCond %{HTTP:Accept-Language} ^en [NC]
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(.*)$ /en/ [R=302,L]

# English Version URL Handling
# Handle English product URLs
RewriteRule ^en/product/([^/]+)/?$ /en/product-details.html?id=$1 [QSA,L]

# Handle English category URLs
RewriteRule ^en/perfumes/?$ /en/#perfumes-section [R=302,L]
RewriteRule ^en/watches/?$ /en/#watches-section [R=302,L]

# Arabic Version (Default)
# Redirect single product URLs to product pages
RewriteRule ^product/chanel-coco-perfume-100ml/?$ /products/chanel-coco-100ml.html [R=301,L]
RewriteRule ^product/gucci-flora-women-perfume/?$ /products/gucci-flora.html [R=301,L]
RewriteRule ^product/gucci-bloom-feminine-perfume/?$ /products/gucci-bloom.html [R=301,L]
RewriteRule ^product/rolex-yacht-master-silver-watch/?$ /products/rolex-yacht-master-silver.html [R=301,L]
RewriteRule ^product/rolex-classic-watch-41mm/?$ /products/ساعة-Rolex-كلاسيكية-41-ملم-2022.html [R=301,L]
RewriteRule ^product/omega-swatch-baby-blue-watch/?$ /products/omega-swatch-baby-blue.html [R=301,L]

# General product redirect pattern
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^product/([^/]+)/?$ /find-product.php?name=$1 [L]

# Handle direct product access without .html extension
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^products/([^/]+)/?$ /products/$1.html [L]

# English directory product access
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^en/products/([^/]+)/?$ /products/$1.html [L]

# Canonical URL redirects for SEO
# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.emirates-gifts\.arabsad\.com$ [NC]
RewriteRule ^(.*)$ https://emirates-gifts.arabsad.com/$1 [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# SEO: Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=301,L]

# SEO: Handle index.html removal
RewriteCond %{THE_REQUEST} /index\.html[?\s] [NC]
RewriteRule ^(.*?)index\.html$ /$1 [R=301,L]

# Handle English index.html removal
RewriteCond %{THE_REQUEST} /en/index\.html[?\s] [NC]
RewriteRule ^en/index\.html$ /en/ [R=301,L]

# 404 Error Handling
ErrorDocument 404 /404.html

# Security: Block access to sensitive files
<FilesMatch "\.(env|log|sql|bak|backup|conf|ini|yaml|yml|json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to Python files (keep functionality but hide from public)
<FilesMatch "\.py$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (Basic)
    Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' https:; img-src 'self' https: data:; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com;"
</IfModule>

# GZIP Compression for Performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Browser Caching for Performance
<IfModule mod_expires.c>
    ExpiresActive on
    
    # HTML files (short cache for dynamic content)
    ExpiresByType text/html "access plus 1 hour"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Other files
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# Cache Control Headers
<IfModule mod_headers.c>
    # HTML files
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # CSS and JavaScript
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # Images
    <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # Fonts
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Sitemap and Feed Access
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]
RewriteRule ^google-merchant-feed\.xml$ /google-merchant-feed-complete.xml [L]
RewriteRule ^product-feed\.xml$ /product-feed.xml [L]
RewriteRule ^robots\.txt$ /robots.txt [L]

# API Endpoints
# Allow access to feed generation (if needed)
RewriteRule ^api/generate-feed/?$ /generate-feed.php [L]
RewriteRule ^api/generate-sitemap/?$ /generate-sitemap.php [L]

# Performance: Enable ETag
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Performance: Remove Server Signature
ServerTokens Prod

# Additional SEO optimizations
# Redirect old URLs to maintain SEO value
RedirectMatch 301 ^/old-products/(.*)$ /products/$1

# Handle trailing slash consistency
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} /$
RewriteRule ^(.*)/ $1 [R=301,L]

# Add slash to directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1/ [R=301,L]

# Mobile Detection (Optional)
# RewriteCond %{HTTP_USER_AGENT} "(iPhone|iPod|iPad|Android|BlackBerry)"
# RewriteRule ^$ /mobile/ [R=302,L]

# Multi-language sitemap
RewriteRule ^sitemap-en\.xml$ /sitemap-en.xml [L]
RewriteRule ^sitemap-ar\.xml$ /sitemap.xml [L]