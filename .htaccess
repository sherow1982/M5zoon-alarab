# Emirates Gifts Store - Comprehensive .htaccess Configuration
# SEO Optimization, Caching, Compression, and Performance Enhancement
# Updated: October 31, 2025 for UAE hosting optimization

RewriteEngine On
Options +FollowSymlinks

# ================================
# SECURITY HEADERS
# ================================
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy for privacy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: http:; connect-src 'self' https:;"
    
    # Remove server signature for security
    Header unset Server
    Header unset X-Powered-By
Header set Connection keep-alive
</IfModule>

# ================================
# CANONICAL DOMAIN & HTTPS
# ================================
# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Canonical domain enforcement (remove www)
RewriteCond %{HTTP_HOST} ^www\.emirates-gifts\.arabsad\.com [NC]
RewriteRule ^(.*)$ https://emirates-gifts.arabsad.com/$1 [L,R=301]

# ================================
# LANGUAGE & SEO URL STRUCTURE
# ================================
# Language Detection and Redirection
RewriteCond %{HTTP:Accept-Language} ^en [NC]
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{QUERY_STRING} !lang=ar
RewriteRule ^(.*)$ /en/ [R=302,L]

# Clean URL Structure for Products
RewriteRule ^product/([^/]+)/?$ product-details.html?id=$1 [L,QSA]
RewriteRule ^en/product/([^/]+)/?$ en/product-details.html?id=$1 [L,QSA]

# Category URLs for SEO
RewriteRule ^perfumes/?$ products-showcase.html?category=perfumes [L,QSA]
RewriteRule ^watches/?$ products-showcase.html?category=watches [L,QSA]
RewriteRule ^en/perfumes/?$ en/products-showcase.html?category=perfumes [L,QSA] 
RewriteRule ^en/watches/?$ en/products-showcase.html?category=watches [L,QSA]

# Brand-specific URLs for better SEO
RewriteRule ^brand/([^/]+)/?$ products-showcase.html?search=$1 [L,QSA]
RewriteRule ^en/brand/([^/]+)/?$ en/products-showcase.html?search=$1 [L,QSA]

# Remove .html extension from URLs for cleaner SEO
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^.]+)$ $1.html [NC,L]

# Remove .html extension from displayed URLs
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Redirect index.html to root for SEO
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^ / [R=301,L]

# Handle English index.html
RewriteCond %{THE_REQUEST} \s/+en/index\.html[\s?] [NC]
RewriteRule ^en/index\.html$ /en/ [R=301,L]

# ================================
# COMPRESSION (GZIP) FOR SPEED
# ================================
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/json
    AddOutputFilterByType DEFLATE application/json
    
    # Remove browser bugs for old browsers
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# ================================
# BROWSER CACHING FOR PERFORMANCE
# ================================
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Images - 1 year (static assets)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript - 1 month (for updates)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fonts - 1 year
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Data files - 1 day (for product updates)
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType application/rss+xml "access plus 1 day"
    
    # HTML files - 6 hours (for fresh content)
    ExpiresByType text/html "access plus 6 hours"
    
    # Default
    ExpiresDefault "access plus 1 month"
</IfModule>

# Alternative caching with Cache-Control headers
<IfModule mod_headers.c>
    # 1 YEAR - Static Assets
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|webp|js|css|swf|woff|woff2|ttf|svg)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # 6 HOURS - HTML files
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=21600, public, must-revalidate"
    </FilesMatch>
    
    # 1 DAY - Data files
    <FilesMatch "\.(json|xml|rss)$">
        Header set Cache-Control "max-age=86400, public"
    </FilesMatch>
</IfModule>

# ================================
# FILE ACCESS & SECURITY
# ================================
# Prevent access to sensitive files
<FilesMatch "\.(env|log|ini|conf|sql|bak|backup|git|gitignore|htaccess|htpasswd|md|txt|py|phpinfo)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Block access to hidden files
<FilesMatch "^\.(htaccess|htpasswd|git)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# ================================
# ERROR PAGES
# ================================
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
ErrorDocument 403 /403.html

# ================================
# PERFORMANCE OPTIMIZATIONS
# ================================
# Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ETags for better caching
FileETag MTime Size

# MIME Types for better handling
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType application/json .json
    AddType text/xml .xml
    AddType image/webp .webp
    AddType application/xml .xml
</IfModule>

# ================================
# SEO URL REDIRECTS
# ================================
# Handle old product URLs (maintain SEO)
Redirect 301 /old-products.html /products-showcase.html
Redirect 301 /products.html /products-showcase.html
Redirect 301 /blog.html /blog/

# Consistent trailing slash handling
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} \s.+?//+(.*)\s HTTP/
RewriteRule ^ /%1 [R=301,L]

# Add trailing slash to directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule . %{REQUEST_URI}/ [R=301,L]

# ================================
# FEED & SITEMAP ACCESS
# ================================
# Ensure sitemap accessibility
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]
RewriteRule ^product-feed\.xml$ /product-feed.xml [L]
RewriteRule ^robots\.txt$ /robots.txt [L]

# ================================
# HOTLINKING PROTECTION
# ================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?emirates-gifts\.arabsad\.com [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?bing\. [NC]
    RewriteCond %{REQUEST_URI} \.(gif|jpe?g|png|webp)$ [NC]
    RewriteRule \.(gif|jpe?g|png|webp)$ - [F,L]
</IfModule>

# ================================
# CHARSET & LANGUAGE
# ================================
AddDefaultCharset UTF-8

<IfModule mod_negotiation.c>
    Options +MultiViews
    LanguagePriority ar en
    ForceLanguagePriority Prefer Fallback
</IfModule>

# ================================
# HTTP/2 OPTIMIZATION
# ================================
<IfModule mod_http2.c>
    H2Push on
    H2PushPriority * after
    H2PushPriority text/css before
    H2PushPriority image/png after 32
    H2PushPriority application/javascript interleaved
</IfModule>

# ================================
# ADDITIONAL PERFORMANCE
# ================================
# Remove ETags for better performance
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Server signature removal
ServerTokens Prod

# Enable compression for JSON and XML
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    SetEnvIfNoCase Request_URI \\
        \.(?:gif|jpe?g|png)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \\
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# ================================
# SEO FRIENDLY REDIRECTS
# ================================
# Handle legacy URLs
Redirect 301 /products.html /products-showcase.html
Redirect 301 /blog.html /blog/
Redirect 301 /contact.html /about.html

# Product category redirects
RewriteRule ^perfumes-ar/?$ /#perfumes-section [R=301,L]
RewriteRule ^watches-ar/?$ /#watches-section [R=301,L]
RewriteRule ^en/perfumes-en/?$ /en/#perfumes-section [R=301,L]
RewriteRule ^en/watches-en/?$ /en/#watches-section [R=301,L]

# ================================
# MOBILE & DEVICE OPTIMIZATION
# ================================
# Add Vary header for better mobile caching
<IfModule mod_headers.c>
    Header append Vary User-Agent
    Header append Vary Accept-Encoding
</IfModule>

# ================================
# SPECIFIC FILE PROTECTIONS
# ================================
# Block access to Python scripts but keep functionality
<FilesMatch "\.py$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect JSON data files from direct access
<FilesMatch "\.(json)$">
    <RequireAll>
        Require all denied
        # Allow specific referrers
        Require expr "%{HTTP_REFERER} =~ /emirates-gifts\.arabsad\.com/"
        # Allow localhost for development
        Require local
    </RequireAll>
</FilesMatch>

# ================================
# PERFORMANCE CACHE HEADERS
# ================================
<IfModule mod_headers.c>
    # Cache static assets aggressively
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache HTML files for 6 hours
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=21600, must-revalidate"
    </FilesMatch>
    
    # Cache data files for 1 day
    <FilesMatch "\.(json|xml|txt)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# ================================
# SEARCH ENGINE SPECIFIC
# ================================
# Sitemap and robots accessibility
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]
RewriteRule ^product-feed\.xml$ /product-feed.xml [L]
RewriteRule ^robots\.txt$ /robots.txt [L]

# Google Merchant Feed
RewriteRule ^merchant-feed\.xml$ /google-merchant-feed-complete.xml [L]
RewriteRule ^google-merchant-feed\.xml$ /google-merchant-feed-complete.xml [L]

# ================================
# TRAILING SLASH CONSISTENCY
# ================================
# Remove trailing slash from files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} /$
RewriteRule ^(.*)/ $1 [R=301,L]

# Add trailing slash to directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1/ [R=301,L]

# ================================
# LEGACY SUPPORT
# ================================
# Old product page redirects for SEO preservation
RewriteRule ^product/chanel-coco-perfume-100ml/?$ product-details.html?id=perfume_1 [R=301,L]
RewriteRule ^product/dior-sauvage-100ml/?$ product-details.html?id=perfume_4 [R=301,L]
RewriteRule ^product/rolex-yacht-master-silver/?$ product-details.html?id=watch_1 [R=301,L]
RewriteRule ^product/rolex-kaaba-design/?$ product-details.html?id=watch_88 [R=301,L]

# English legacy redirects
RewriteRule ^en/product/chanel-coco-perfume-100ml/?$ en/product-details.html?id=perfume_1 [R=301,L]
RewriteRule ^en/product/dior-sauvage-100ml/?$ en/product-details.html?id=perfume_4 [R=301,L]

# ================================
# FINAL OPTIMIZATIONS
# ================================
# Prevent access to backup and temporary files
<FilesMatch "\.(bak|backup|old|tmp|temp|cache|log|conf|ini|yaml|yml|dist)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block common exploit attempts
RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} ^.*\.(bash|git|hg|log|svn|swp|cvs) [NC,OR]
RewriteCond %{QUERY_STRING} etc/passwd [NC,OR]
RewriteCond %{QUERY_STRING} boot\.ini [NC,OR]
RewriteCond %{QUERY_STRING} ftp: [NC,OR]
RewriteCond %{QUERY_STRING} http: [NC,OR]
RewriteCond %{QUERY_STRING} https: [NC]
RewriteRule .* - [F]

# Enable CORS for fonts (if loading from CDN)
<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Custom 503 page for maintenance (if needed)
# ErrorDocument 503 /maintenance.html