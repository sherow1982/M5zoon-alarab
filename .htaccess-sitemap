# Emirates Gifts Store - Sitemap Configuration
# إعدادات sitemap لمتجر هدايا الإمارات

# تفعيل قواعد إعادة الكتابة
RewriteEngine On

# روابط sitemap
RewriteRule ^sitemap\.xml$ generate-sitemap.php [L]
RewriteRule ^sitemap$ generate-sitemap.php [L]
RewriteRule ^site-map\.xml$ generate-sitemap.php [L]

# روابط فيد Google Merchant (if needed)
RewriteRule ^google-merchant-feed\.xml$ generate-feed.php [L]
RewriteRule ^feed\.xml$ generate-feed.php [L]
RewriteRule ^products-feed\.xml$ generate-feed.php [L]

# ضغط XML لتحسين الأداء
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/xml text/xml
</IfModule>

# تخزين مؤقت لملفات XML
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# أمان إضافي
<Files "sitemap-log.txt">
    Order allow,deny
    Deny from all
</Files>